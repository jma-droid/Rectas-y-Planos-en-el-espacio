import numpy as np

def es_ortogonal(A, tolerancia=1e-10):
    A = np.array(A, dtype=float)

    # Calculamos A^T A
    producto = A.T @ A

    # Creamos la matriz identidad del mismo tamaño
    identidad = np.eye(A.shape[0])

    # Se comprueba si A^T A es "casi" identidad (por efectos numéricos)
    return np.allclose(producto, identidad, atol=tolerancia)

# Ejemplo de uso:
A = np.array([
    [0, 1],
    [-1,  0]
])

if es_ortogonal(A):
    print("La matriz es ortogonal.")
else:
    print("La matriz NO es ortogonal.")
